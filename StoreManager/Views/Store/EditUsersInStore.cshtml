@model List<StoreManager.ViewModels.Store.UserInStoreViewModel>

@{
    var roleId = ViewBag.id;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this store</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input">
                    <input type="hidden" asp-for="@Model[i].UserId">
                    <input type="hidden" asp-for="@roleId">
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].FullName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" asp-controller="Store" asp-action="EditUsersInStore">Update</button>
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>