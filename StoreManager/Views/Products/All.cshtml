@model IEnumerable<StoreManager.ViewModels.Products.AllProductsViewModel>

@{
    ViewData["Title"] = "AllProducts";
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <div class="col-sm-1">
                    <img src="@Html.DisplayFor(modelItem => item.ProductImg)" class="img-fluid" alt="Responsive image" width="500" height="600"/>
                    </div>
            </td>
            <td>
                <div>
                @Html.DisplayFor(modelItem => item.Name)
                </div>
            </td>
            <td>
                <div>
                @Html.DisplayFor(modelItem => item.Price)
                </div>
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProduct", new {  id=item.Id}) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  }, new { @class = "btn btn-danger", onclick = "alert('This Product Will be Deleted');" })
            </td>
        </tr>
}
    </tbody>
</table>
